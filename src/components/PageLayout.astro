---
// components/PageLayout.astro
export interface Props {
  titulo: string;
  anterior?: string;
  siguiente?: string;
  indice?: string;
}

const { titulo, anterior, siguiente, indice = "/" } = Astro.props;
---

<div class="max-w-4xl mx-auto p-8 bg-white shadow-xl rounded-xl font-serif text-lg leading-relaxed sm:mt-10 mt-6">
  <!-- Título -->
  <h1 class="text-4xl font-bold mb-6 border-b border-gray-300 pb-3 tracking-tight">{titulo}</h1>

  <!-- Contenido -->
  <div class="prose prose-lg max-w-none text-gray-800">
    <slot />
  </div>

  <!-- Navegación entre secciones -->
  <nav class="mt-12 flex justify-between items-center text-base">
    <a href={anterior ?? indice} class="text-blue-600 hover:underline">
      ← {anterior ? "Anterior" : "Índice"}
    </a>
    <a href={siguiente ?? indice} class="text-blue-600 hover:underline ml-auto">
      {siguiente ? "Siguiente →" : "Volver al Índice →"}
    </a>
  </nav>
</div>
