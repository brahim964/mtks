---
import '../styles/global.css';
import BubbleMenu from '../components/BubbleMenu.astro';

const { title = 'Catálogo', lang = 'es' } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script src="https://unpkg.com/alpinejs" defer></script>
  </head>
  <body class="bg-[var(--color-bg)] text-[var(--color-text)] font-serif relative overflow-x-hidden overflow-y-auto">
    <!-- Burbuja de navegación fija -->
    <BubbleMenu lang={lang} />

    <!-- Contenido principal -->
    <main class="page-container fade-in transition-all duration-500 ease-in-out" style="max-width: 100%; max-height: 100%;">
      <slot />
    </main>
  </body>
</html>
